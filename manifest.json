{
  "manifest_version": 3,
  "name": "TableLens",
  "version": "1.0.0",
  "description": "Extract HTML tables from any webpage, explore them with charts, and export your data with ease.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "desktopCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TableLens",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "ocr-capture.js"],
      "css": ["content.css", "ocr-overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chart.html", "table-viewer.html", "table-viewer.js", "libs/*", "utils/license.js"],
      "matches": ["<all_urls>"]
    }
  ]
}